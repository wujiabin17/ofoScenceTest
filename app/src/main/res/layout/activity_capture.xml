<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <SurfaceView
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.sprocomm.ofoscenetest.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <RelativeLayout
            android:id="@+id/tl_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_alignParentTop="true"
            android:background="#22000000">
            <ImageButton
                android:id="@+id/capture_imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_back_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:text="扫码开锁"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:text="使用帮助"/>
        </RelativeLayout>
        <!--
        <Button
            android:id="@+id/button_openClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="@string/openorclose_light" />
        -->

        <TextView
            android:id="@+id/barcode_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dip"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:text="@string/qrcode_notice"
            android:textColor="#ffffff"
            android:textSize="14.0sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/button_openorcloseClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:src="@mipmap/mzw_camera_open" />
            <TextView
                android:id="@+id/tv_light"
                android:textColor="#ffffff"
                android:layout_alignBottom="@id/button_openorcloseClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_light"/>
        </RelativeLayout>

    </RelativeLayout>
  </FrameLayout>
